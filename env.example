# Freelancer.com API Configuration
FREELANCER_OAUTH_TOKEN=your_freelancer_oauth_token_here

# Groq AI API Configuration
GROQ_API_KEY=your_groq_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./backend/freelancer_bot.db

# Bot Configuration
BID_LIMIT=50
PROJECT_SEARCH_LIMIT=10
MIN_WAIT_TIME=20

# Service Offerings (comma-separated)
SERVICE_OFFERINGS=Web Development,Python Programming,Data Analysis,Machine Learning

# Bid Writing Style
BID_WRITING_STYLE=You are a professional freelancer writing a bid proposal. Write a compelling bid that highlights your expertise and experience. Keep it professional, concise, and focused on the client's needs.

# Portfolio Links (JSON format)
PORTFOLIO_LINKS={"GitHub": "https://github.com/yourusername", "Portfolio": "https://yourportfolio.com"}

# Portfolio Links Text
PORTFOLIO_LINKS_TEXT=1. GitHub: https://github.com/yourusername\n2. Portfolio: https://yourportfolio.com

# Signature
SIGNATURE=Best regards,\nYour Name

# Skill IDs (comma-separated)
SKILL_IDS=1,2,3,4,5

# Language Codes (comma-separated)
LANGUAGE_CODES=en,es,fr

# Unwanted Currencies (comma-separated)
UNWANTED_CURRENCIES=INR,PKR

# Unwanted Countries (comma-separated)
UNWANTED_COUNTRIES=India,Pakistan